2. https://stepik.org/lesson/65094/step/3?unit=41881
Ответ:
int min (int a, int b)
{
    if(a < b)
    {
        return a;
    }
    else
    {
        return b;
    }
}

3. https://stepik.org/lesson/65094/step/4?unit=41881
Ответ:
#include <stdio.h>

int min(int a, int b, int c)
{
    int min;
    if(a < b && a < c)
    {
        min = a;
    }
    else if(b < a && b < c)
    {
        min = b;
    }
    else if(c < a && c < b)
    {
        min = c;
    }
    return min;
}
int main()
{
    int a, b, c;
    scanf("%d %d %d", &a, &b, &c);
    printf("%d", min(a, b, c));
    return 0;
}

4. https://stepik.org/lesson/65094/step/5?unit=41881
Ответ:
#include <stdio.h>

int factorial(int a)
{
    int i = 1, k = 1;
    for(i = 1; i <= a; i++)
    {
        k *= i;
    }
    return k;
}

int main()
{
    int n;
    scanf("%d", &n);
    printf("%d", factorial(n));
    return 0;
} 

5. https://stepik.org/lesson/65094/step/6?unit=41881
Ответ:
#include <stdio.h>

int factorial(int p)
{
    int i = 1, f = 1;
    for(i = 1; i <= p; i++)
    {
        f *= i;
    }
    return f;
}

int combin(int n, int k)
{
    int i = 1, f1 = 1, f2 = 1, answer;
    for(i = 1; i <= k; i++)
    {
        f1 *= i;
    }
    for(i = 1; i <= n - k; i++)
    {
        f2 *= i;
    }
    answer = f1 * f2;
    return factorial(n) / answer;
}

int main()
{
    int n, k;
    scanf("%d %d", &n, &k);
    printf("%d", combin(n, k));
    return 0;
}
